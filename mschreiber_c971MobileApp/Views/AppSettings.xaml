<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mschreiber_c971MobileApp.Views.AppSettings"
             Title = "App Settings">
    <ContentPage.Content>
        <StackLayout>

            <Label x:Name="AssessmentList" Text="Click buttons in numerical order (1, 2, 3) to load or refresh evaluation data"  FontSize="Medium" HorizontalTextAlignment="Center" TextColor="#ffffff" BackgroundColor="#313030"></Label>



            <Button x:Name="ClearPreferences" Text="1. Clear Preferences" WidthRequest="150" HorizontalOptions="Center" VerticalOptions="Center" Clicked="ClearPreferences_Clicked"></Button>
            
            <Button x:Name="ClearSampleData" Text="2. Clear Evalution Data" WidthRequest="150" HorizontalOptions="Center" VerticalOptions="Center" Clicked="ClearSampleData_Clicked"></Button>

            <Button x:Name="LoadSampleData" Text="3. Load Evaluation Data" WidthRequest="150" HorizontalOptions="Center" Clicked="LoadSampleData_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>