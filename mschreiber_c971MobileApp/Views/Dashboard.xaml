<?xml version="1.0" encoding="utf-8" ?>
    
    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mschreiber_c971MobileApp.Views.Dashboard">

    <NavigationPage.TitleView>
        <Label Text="Student Dashboard" FontSize="Medium" />
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="StudentProfile" Text="My Profile" Clicked="StudentProfile_Clicked"/>
        <ToolbarItem x:Name="Notes" Text="Notes" Clicked="Notes_Clicked" />
        <ToolbarItem x:Name="Settings" Text="Settings" Clicked="Settings_Clicked" Order="Secondary" />
        
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome To Your Student Dashboard"            
                HorizontalOptions="CenterAndExpand" />

            <Label Text="Get an overview of terms or go straight to adding new Terms" HorizontalOptions="CenterAndExpand" Padding="0"></Label>

            <Button x:Name="TermDetail" Text="Term List" Clicked="ViewTerms_Clicked"
                 HorizontalOptions="CenterAndExpand" />
            
            <Button x:Name="TermAdd" Text="Add New Term" Clicked="AddTerm_Clicked"
                HorizontalOptions="CenterAndExpand" />

        </StackLayout>
    </ContentPage.Content>

</ContentPage>