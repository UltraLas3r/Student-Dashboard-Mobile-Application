<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mschreiber_c971MobileApp.Views.Dashboard">

    <NavigationPage.TitleView>
        <Label Text="Student Dashboard" FontSize="Medium" />
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        
       
        <ToolbarItem x:Name="Settings" Text="Settings" Clicked="Settings_Clicked" Order="Secondary" />
        
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout BackgroundColor="#e4e5ea">
            <Label Text="Welcome To Your Student Dashboard"            
                HorizontalOptions="CenterAndExpand" 
                   BackgroundColor="#e4e5ea"/>

            <Label Text="Get an overview of terms, or go straight to adding a new" HorizontalOptions="CenterAndExpand" Padding="0"></Label>

            <Button x:Name="TermDetail" Text="View Terms" Clicked="ViewTerms_Clicked" HorizontalOptions="CenterAndExpand" TextColor="#ffffff" BackgroundColor="#313030" />

            <Button x:Name="TermAdd" Text="Add New Term" Clicked="AddTerm_Clicked" HorizontalOptions="CenterAndExpand" TextColor="#ffffff"  BackgroundColor="#313030"/>

            

        </StackLayout>
    </ContentPage.Content>

</ContentPage>