<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mschreiber_c971MobileApp.Views.CourseAdd"
             Title = "ADD Course">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="SaveCourse" Text="Save" Clicked="SaveCourse_Clicked" ></ToolbarItem>
        <ToolbarItem x:Name="CancelCourse" Text="Cancel" Clicked="SaveCourse_Clicked"></ToolbarItem>
        <ToolbarItem x:Name="Home" Text="Home" Clicked="Home_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Grid Padding="5" RowSpacing="1" ColumnSpacing="1" BackgroundColor="WhiteSmoke">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Course Name</Label>
                <Entry x:Name="CourseName" Placeholder="Enter Course Name" Grid.Row="0" Grid.Column="1" VerticalTextAlignment="Center" Text="{Binding Name}"></Entry>
                <Label Grid.Row="1" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Course Term</Label>
                <Entry x:Name="CourseTerm" Placeholder="Term" Grid.Row="1" Grid.Column="1" VerticalTextAlignment="Center"></Entry>

                <Picker Grid.Row="1" Grid.Column="1" FontSize="Medium" x:Name="CourseTermPicker"
                        Title="Select a Term for your Course"
                        TitleColor="Teal">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Fall</x:String>
                            <x:String>Winter</x:String>
                            <x:String>Spring</x:String>
                            <x:String>Summer</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <Label Grid.Row="2" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Students Enrolled</Label>
                <Entry Grid.Row="2" Grid.Column="1" x:Name="Enrolled" Placeholder="Enrolled"></Entry>

                <Label Grid.Row="3" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Course Fee</Label>
                <Entry Grid.Row="3" Grid.Column="1" x:Name="CourseFee" Placeholder="Enter Course Fee"></Entry>

                <Label Grid.Row="6" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Price</Label>
                <Switch Grid.Row="6" Grid.Column="1" x:Name="Notification" HorizontalOptions="End"></Switch>

                <Label Grid.Row="4" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Date</Label>
                <DatePicker Grid.Row="4" Grid.Column="1" x:Name="DatePicker"></DatePicker>

                <Label Grid.Row="5" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Any Notes?</Label>
                <Entry Grid.Row="5" Grid.Column="1" x:Name="NotesEditor" Placeholder="Enter Notes Here"></Entry>

            </Grid>
        </StackLayout>
    </ContentPage.Content> 
</ContentPage>