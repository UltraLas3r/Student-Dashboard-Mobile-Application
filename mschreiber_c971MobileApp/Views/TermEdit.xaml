<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mschreiber_c971MobileApp.Views.TermEdit"
             Title = "Term Edit">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="SAVE" x:Name="SaveTerm" Clicked="SaveTerm_Clicked"   ></ToolbarItem>
        <ToolbarItem Text="CANCEL" x:Name="CancelTerm" Clicked="CancelTerm_Clicked" ></ToolbarItem>
        <ToolbarItem Text="REMOVE" x:Name="RemoveTerm" Clicked="RemoveTerm_Clicked" ></ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <!--Button and Label Region-->

        <Button x:Name="AddClass" Text="Add Class" Clicked="AddClass_Clicked"></Button>

        <Label Text="Term Count" FontSize="Large"></Label>
        <Label x:Name="CountLabel" FontSize="Large"></Label>
        <Label x:Name="LabelList" Text="List of Terms" FontSize="Large" FontAttributes="Bold"></Label>
        <Label Text="___________________________________________________"></Label>

        <!--#endregion-->

        <Label Text="Welcome to Term Edit"
                   VerticalOptions="CenterAndExpand" 
                     HorizontalOptions="CenterAndExpand" />

        <CollectionView x:Name="CourseCollectionView"
                        ItemsSource="{Binding Courses}"
                        EmptyView="No Courses To Display."
                        SelectionMode="Single"
                        SelectionChanged="CourseCollectionView_SelectionChanged"/>

        <Grid Padding="5" RowSpacing="1" ColumnSpacing="1" BackgroundColor="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Term ID</Label>
            <Entry Text="{Binding Id}" x:Name="TermId" Placeholder="Enter Term Id" Grid.Row="0" Grid.Column="1" VerticalTextAlignment="Center" IsReadOnly="True"></Entry>

            <Label Grid.Row="1" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Term Season</Label>
            <Entry Text="{Binding Name}" x:Name="TermName" Placeholder="Enter Term Name" Grid.Row="1" Grid.Column="1" VerticalTextAlignment="Center" IsReadOnly="True"></Entry>

            <Label Grid.Row="2" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Term</Label>

            <Picker Grid.Column="3" FontSize="Medium" x:Name="TermSeasonPicker"
                        Title="Select a Season"
                        TitleColor="Teal">
                <Picker.Items>
                    <x:String>Fall</x:String>
                    <x:String>Winter</x:String>
                    <x:String>Spring</x:String>
                    <x:String>Summer</x:String>
                </Picker.Items>
            </Picker>

            <Label Grid.Row="4" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Enrolled</Label>
            <Entry Text="Binding TermEnrollment" x:Name="TermEnrollment" Grid.Row="2" Grid.Column="1" VerticalTextAlignment="Center" IsReadOnly="True"></Entry>

            <Label Grid.Row="5" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Term Fees</Label>
            <Entry Text="Binding TermFees" x:Name="TermFees" Placeholder="Enter Term Fees" Grid.Row="3" Grid.Column="1" VerticalTextAlignment="Center" IsReadOnly="True"></Entry>

            <Label Grid.Row="6" Grid.Column="0" FontSize="Medium" VerticalTextAlignment="Center">Date</Label>
            <DatePicker Grid.Row="4" Grid.Column="1" x:Name="DatePicker"></DatePicker>

            

        </Grid>
    </StackLayout>
</ContentPage>